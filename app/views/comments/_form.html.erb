<%= form_for [@post,comment] do |f| %>
    <div class = "field">
    <%= f.hidden_field :user_id, value: current_user.id%>
     </div>

    <div class="field">
        <%= f.label :body, "Comment" %>
        <%= f.text_area :body%>
    </div>
    
    <div class="actions">
        <%= f.submit %>
    </div>
 <% end %>