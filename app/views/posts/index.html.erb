<h1><%= @category.name %>, <%= @category.description %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to  post.title, post_path(post)%></td>
        <td><%= post.user.username%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'Home', categories_path  %>