<%= link_to 'Home', categories_path  %>
<%= link_to 'Current Week', category_posts_path(@post.category.id) %>
<br>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
<strong>Hashtags:</strong>
<% @post.tag.to_s.split(' ').each do |word| %>
  <% if word.start_with?('#') %>
    <%= link_to word, search_path(query: word) %>
  <%else %>
    <%= word %>
  <%end %>
<% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', @post, method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to 'Back', :back %>

<br>
<div id ="comments">
<% if @post.comments.present? %>
  <h1>Comments</h1>
<% end %>
    <%= render @post.comments %>
    <h2> Add a comment<h2>
    <%= render partial: "comments/form", locals: {comment: @post.comments.new} %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |