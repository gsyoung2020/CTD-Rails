<%= link_to 'Home', categories_path  %>
<br>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', @post, method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to 'Back', category_posts_path(@post.category.id) %>